<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hash_widgets.HashBarcodeScanner">


    <SurfaceView
    android:id="@+id/cameraView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <info.androidhive.barcode.ScannerOverlay
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        app:line_color="#EE6560"
        app:line_speed="6"
        app:line_width="4"
        app:square_height="300"
        app:square_width="300" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignStart="@id/overlay"
        android:layout_alignTop="@id/overlay"
        android:layout_alignEnd="@id/overlay"
        android:layout_marginTop="16dp" />

</RelativeLayout>