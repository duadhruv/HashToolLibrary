<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="HashTextView">
        <attr name="SPG" format="string" />
        <attr name="SPV" format="string"/>
        <attr name="HashType" format="enum">
            <enum name="Text" value= "0"/>
            <enum name="Caption" value="1"/>
            <enum name="Time" value="2"/>
            <enum name="Date" value= "3"/>
            <enum name="QRCode" value="4"/>
            <enum name="NumberOnly" value="5"/>
            <enum name="List" value="6" />
            <enum name="DecimalNumber" value="7"/>
            <enum name="Label" value="8"></enum>
            <enum name="Image" value="9"></enum>
            <enum name="Hidden" value="10"></enum>
        </attr>
        <attr name="Visibility" format="enum">
            <enum name="Visible" value="1"></enum>
            <enum name="Invisible" value="0"></enum>
        </attr>

        <attr name="HintBackgroundColor" format="color"></attr>
        <attr name="EdittextBackgroundColor"  format="color"></attr>
        <attr name="FontAsset" format="string"></attr>

        <attr name="LabelName" format="string"/>
        <attr name="AllowBlank" format="enum">
            <enum name="False" value="0"></enum>
            <enum name="True" value="1"></enum>
        </attr>
        <attr name="ImeOption" format="enum">
            <enum name="Next" value="0"></enum>
            <enum name="Done" value="1"></enum>
            <enum name="Both" value="2"></enum>

        </attr>

        <attr name="CameraSide">
            <enum value="0" name="Back"></enum>
            <enum value="1" name="Front"></enum>
        </attr>
        
        
        <attr name="CapWord" format="boolean"></attr>
        <attr name="Password" format="boolean"></attr>

    </declare-styleable>





    <declare-styleable name="PercentageGauge">
        <attr name="ProgressColor" format="color"></attr>
        <attr name="ProgressBgColor" format="color"></attr>
        <attr name="StrokeWidth" format="dimension"></attr>
        <attr name="TextSize" format="dimension"></attr>
        <attr name="GapWidth" format="integer"></attr>
        <attr name="GapAngle" format="integer"></attr>
        <attr name="Progress" format="integer"></attr>
        <attr name="Rotation" format="enum">
            <enum name="Clockwise" value="0"></enum>
            <enum name="AntiClockwise" value="1"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="RoundedBarChart">
        <attr name="radius" format="dimension"></attr>
    </declare-styleable>

</resources>